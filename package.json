{
  "name": "donut",
  "devDependencies": {
    "@biomejs/biome": "^1.8.2",
    "@types/bun": "latest",
    "biome-config": "workspace:*",
    "husky": "^9.0.11",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "biome lint app/ packages/",
      "biome format --write apps/ packages/"
    ]
  },
  "packageManager": "bun@1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:debug": "turbo dev:debug",
    "start": "turbo start",
    "lint": "biome lint apps/ packages/",
    "format": "biome format --write apps/ packages/",
    "prepare": "husky"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@prisma/client",
    "@prisma/engines",
    "prisma"
  ],
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
