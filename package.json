{
	"name": "donut",
	"devDependencies": {
		"@biomejs/biome": "^1.8.2",
		"@types/bun": "latest",
		"biome-config": "workspace:*",
		"husky": "^9.0.11",
		"tsconfig": "workspace:*",
		"turbo": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"lint-staged": {
		"*.ts": [
			"biome lint app/ packages/",
			"biome format --write apps/ packages/"
		]
	},
	"packageManager": "bun@1.0.0",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"dev:web": "turbo dev --filter=web",
		"dev:bot": "turbo dev --filter=bot",
		"dev:debug": "turbo dev:debug",
		"db:generate": "turbo db:generate",
		"db:push": "turbo db:push",
		"db:studio": "turbo db:studio",
		"start": "turbo start",
		"start:bot": "turbo start --filter=bot",
		"start:web": "turbo start --filter=web",
		"lint": "biome lint apps/ packages/",
		"format": "biome format --write apps/ packages/",
		"postinstall": "bun db:push && bun db:generate && echo 'Please add your bot token to .env in apps/bot folder and your database url in packages/db folder'",
		"prepare": "husky"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@prisma/client",
		"@prisma/engines",
		"prisma",
		"husky"
	],
	"type": "module",
	"workspaces": ["packages/*", "apps/*"]
}
