{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"],
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"persistent": true,
			"cache": false,
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"]
		},
		"dev:debug": {
			"persistent": true,
			"cache": false,
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"]
		},
		"db:push": {
			"cache": false
		},
		"db:generate": {
			"persistent": true,
			"cache": false
		},
		"db:studio": {
			"persistent": true,
			"cache": false
		},
		"start": {
			"persistent": true,
			"cache": false,
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"]
		}
	}
}
